{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 300,
      "memory": 3008
    },
    "*.js": {
      "maxDuration": 300,
      "memory": 3008
    }
  },
  "rewrites": [
    {
      "source": "/pair",
      "destination": "/server.js"
    },
    {
      "source": "/qr",
      "destination": "/server.js"
    },
    {
      "source": "/status",
      "destination": "/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "1",
    "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "1",
    "VERCEL": "1"
  },
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "installCommand": "npm install",
  "regions": ["iad1"]
}