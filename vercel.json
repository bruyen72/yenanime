{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 300
    }
  },
  "rewrites": [
    {
      "source": "/pair",
      "destination": "/api/server"
    },
    {
      "source": "/qr",
      "destination": "/api/server"
    },
    {
      "source": "/status",
      "destination": "/api/server"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "1",
    "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "1",
    "VERCEL": "1"
  }
}