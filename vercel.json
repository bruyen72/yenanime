{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 300,
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/pair",
      "destination": "/api/index"
    },
    {
      "source": "/qr",
      "destination": "/api/index"
    },
    {
      "source": "/status",
      "destination": "/api/index"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}