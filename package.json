{
  "name": "knightbot",
  "version": "1.0.0",
  "description": "WhatsApp Bot",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:web": "node start.js",
    "start:render": "node render-bot.js",
    "postinstall": "echo 'Skipping Playwright install on Vercel'",
    "build": "npm install",
    "start:optimized": "node --max-old-space-size=512 --optimize-for-size --gc-interval=100 index.js",
    "cleanup": "node cleanup.js",
    "reset-session": "node reset-session.js",
    "start:clean": "npm run cleanup && npm run start:optimized",
    "start:fresh": "npm run reset-session && npm start",
    "install:panel": "npm install --legacy-peer-deps",
    "install:force": "npm install --force",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:build": "docker build -t knightbot ."
  },
  "keywords": [
    "whatsapp-bot"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "qrcode": "^1.5.4"
  },
  "engines": {
    "node": "22.x"
  }
}
